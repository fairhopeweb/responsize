doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    link(rel='shortcut icon', type='image/x-icon', href='assets/responsize-small.png')
    title Responsize
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')

    // responsize imports
    script(src='responsize.js')
    link(href='responsize.css', rel='stylesheet')

    style.
      body {
        background-color: grey;
        margin: 0;
      }

  body
    a.ribbon(href="https://github.com/silexlabs/responsize/")
      img(src="https://s3.amazonaws.com/github/ribbons/forkme_right_orange_ff7600.png", alt="Fork me on GitHub")

    // container for Responsize app
    rsz-app#rsz-app
      include rsz/app/app.jade

    // Bootstrap Responsize app
    script.
      window.responsize.init();

